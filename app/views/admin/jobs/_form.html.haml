- item = form.object
= render "admin/shared/errors", item: item
%fieldset.row
  .col-xxs-12
    %legend Informations générales
  .col-xxs-12
    = form.input :active, wrapper: :inline_checkbox
    = form.input :name, wrapper_html: { class: "size-m" }, autofocus: true
    = form.input :company_id, collection: @companies, input_html: { class: "size-m select2" }
    = form.input :started_on, wrapper_html: { class: "size-s" }, required: true do
      .input-group
        = form.input_field :started_on, as: :string, class: "form-control with-calendar", value: format_date(item.started_on)
        %span.input-group-addon= icon "calendar"
    = form.input :ended_on, wrapper_html: { class: "size-s" } do
      .input-group
        = form.input_field :ended_on, as: :string, class: "form-control with-calendar", value: format_date(item.ended_on)
        %span.input-group-addon= icon "calendar"
    = form.input :skill_ids, collection: @skills, selected: @item.skills.map { |x| x.id.to_s }, input_html: { class: "size-m select2", multiple: true }
    = form.input :description, input_html: { rows: 4, class: "tinymce" }
