- item = form.object
= render "admin/shared/errors", item: item
%fieldset.row
  .col-xxs-12
    %legend Informations générales
  .col-xxs-12
    = form.input :active, wrapper: :inline_checkbox
    = form.input :name, wrapper_html: { class: "size-m" }, autofocus: true
    = form.input :location, wrapper_html: { class: "size-m" }
    = form.input :website_url, wrapper_html: { class: "size-m" }
    = form.input :description, as: :text, input_html: { rows: 3 }
