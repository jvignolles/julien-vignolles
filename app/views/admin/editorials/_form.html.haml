    = form.input :active, wrapper: :inline_checkbox
    = form.input :name, wrapper_html: { class: "size-m" }, autofocus: true
    -#= form.input :in_lateral_menu, wrapper: :inline_checkbox
    = form.input :text1, input_html: { rows: 4, class: "tinymce" }
