= link_to front_project_path(id: project), class: "project-link" do
  .project-img-wrapper
    - if (image = project.images.for_kind(:logo).first).present?
      = image_tag image.img.project.logo.url, alt: project.name, class: "project-img grayscale"
    - else
      = image_tag "front/default_project.png", alt: "", class: "project-img"
  .project-name
    %span.inner= project.name
