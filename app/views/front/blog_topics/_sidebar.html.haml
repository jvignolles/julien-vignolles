- if @blog_tags.present?
  .sidebar-list.sidebar-blog-tags
    .sidebar-heading Cat√©gories
    %ol.sidebar-list-items
      - @blog_tags.each do |blog_tag|
        %li.sidebar-list-item= link_to blog_tag.name, front_blog_tag_path(blog_tag_id: blog_tag), class: "sidebar-link"
- if @latest_blog_topics.present?
  .sidebar-list.sidebar-latest-blog-topics
    .sidebar-heading Derniers articles
    %ol.sidebar-list-items
      - @latest_blog_topics.each do |blog_topic|
        %li.sidebar-list-item= link_to blog_topic.name, front_blog_topic_path(id: blog_topic), class: "sidebar-link"
.sidebar-list.sidebar-profile.clearfix
  - if (image = @configuration.images.for_kind(:profile).first).present?
    - alt = image.legend.present? ? image.legend : app_name
    = image_tag image.img.configuration.profile.url, alt: alt, class: "sidebar-profile-img"
  .sidebar-profile-name= app_name
  .sidebar-profile-links= link_to @configuration.baseline, front_home_url
